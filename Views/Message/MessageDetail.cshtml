@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="MessageID" />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajalar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Detayları</div>
						<div class="card-subtitle">
							Gönderen : @Model.NameSurname - Email: @Model.Email - Tarih: @Model.SendDate.ToString("dd MMM yyyy")

						</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						 @Model.MessaeDetail
					</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

